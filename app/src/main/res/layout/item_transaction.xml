<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="12dp">

    <ImageView
        android:id="@+id/icon_background"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_circle" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/icon_background"
        app:layout_constraintEnd_toEndOf="@+id/icon_background"
        app:layout_constraintStart_toStartOf="@+id/icon_background"
        app:layout_constraintTop_toTopOf="@+id/icon_background"
        app:srcCompat="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/transactionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/icon_background"
        app:layout_constraintTop_toTopOf="@+id/icon_background"
        tools:text="Default Name" />

    <ImageView
        android:id="@+id/cardIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_background"
        app:layout_constraintStart_toEndOf="@+id/icon_background"
        app:srcCompat="@drawable/ic_credit_card" />

    <TextView
        android:id="@+id/cardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_background"
        app:layout_constraintStart_toEndOf="@+id/cardIcon"
        tools:text="Default card name" />

    <TextView
        android:id="@+id/textDefaultAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:textAllCaps="true"
        android:textStyle=""
        android:textColor="@color/red"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textDefaultCurrency"
        app:layout_constraintTop_toTopOf="@+id/transactionName"
        tools:text="â€“1 817,20" />

    <TextView
        android:id="@+id/textDefaultCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textDefaultAmount"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="BYN" />

</androidx.constraintlayout.widget.ConstraintLayout>